<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.mbaappo.mbaappo.UI.Perfil"
    android:background="#E8EAF6">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@string/common_open_on_phone"
        android:text="Información del Usuario"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />

    <Button
        android:id="@+id/btn_editar_info"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@android:color/white"
        android:drawableLeft="@drawable/ic_build"
        android:drawableTint="@color/backgroundColor"
        android:gravity="left"
        android:text="Editar Información"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.73"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:backgroundTint="@color/backgroundColor"
        android:text="Contraseña"
        android:textColor="@color/backgroundColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.81"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_cambiar_contraseña"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@android:color/white"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawableTint="@color/backgroundColor"
        android:gravity="left"
        android:text="Cambiar Contraseña"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.957"
        android:textSize="18sp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="255dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        android:backgroundTint="#E8EAF6"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintHorizontal_bias="0.2">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="240dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_bg_1"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/id_username"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:background="@drawable/custom_bg_2"
                android:fontFamily="sans-serif-condensed"
                android:gravity=""
                android:text="Nombre y Apellido"
                android:textColor="@color/backgroundColor"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/id_telefono"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/custom_bg_2"
                android:fontFamily="sans-serif-condensed"
                android:gravity=""
                android:text="Telefono"
                android:textColor="@color/backgroundColor"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/id_correo"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/custom_bg_2"
                android:fontFamily="sans-serif-condensed"
                android:gravity=""
                android:text="Correo Electronico"
                android:textColor="@color/backgroundColor"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/id_direccion"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/custom_bg_2"
                android:fontFamily="sans-serif-condensed"
                android:gravity=""
                android:text="Direccion"
                android:textColor="@color/backgroundColor"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_marginTop="8dp"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.234"
            android:background="@drawable/custom_bg_1">


            <TextView
                android:id="@+id/id_nombre"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:gravity=""
                android:text="TextView"
                android:textColor="@color/backgroundColor"
                android:textSize="15sp"
                android:background="@drawable/custom_bg_2" />

            <TextView
                android:id="@+id/id_numero_telf"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:gravity=""
                android:text="TextView"
                android:textColor="@color/backgroundColor"
                android:textSize="15sp"
                android:background="@drawable/custom_bg_2" />

            <TextView
                android:id="@+id/id_correo_perfil"
                android:layout_width="180dp"
                android:layout_height="58dp"
                android:gravity=""
                android:text="TextView"
                android:textColor="@color/backgroundColor"
                android:textSize="15sp"
                android:background="@drawable/custom_bg_2" />

            <TextView
                android:id="@+id/id_direccion_perfil"
                android:layout_width="180dp"
                android:layout_height="55dp"
                android:gravity=""
                android:text="TextView"
                android:textColor="@color/backgroundColor"
                android:textSize="15sp"
                android:background="@drawable/custom_bg_2" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
