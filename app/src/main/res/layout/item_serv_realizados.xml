<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8EAF6"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/nombre_serv_reali"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="19dp"
            android:text="Precio"
            android:textColor="@color/colorSecondaryText" />

        <TextView
            android:id="@+id/nombre_serv_reali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView14"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView14"
            android:layout_marginTop="11dp"
            android:text="Nombre del servicio"
            android:textColor="@color/colorPrimaryText"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_editar_serv"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/textView14"
            android:layout_alignStart="@+id/textView14"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="19dp"
            android:background="@color/colorAccent"
            android:text="Editar"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/btn_eliminar_serv"
            style="@android:style/Widget.DeviceDefault.Button"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/btn_editar_serv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@android:color/holo_red_dark"
            android:text="Eliminar"
            android:textColor="@color/cardview_light_background" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
