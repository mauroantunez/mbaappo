<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.mbaappo.mbaappo.UI.editar_datos"
    android:background="#E8EAF6">

    <Button
        android:id="@+id/guardardatos"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:text="Guardar"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="33dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintVertical_bias="0.791" />

    <Button
        android:id="@+id/cancelar_datos"
        android:layout_width="122dp"
        android:layout_height="48dp"
        android:text="Cancelar"
        android:layout_marginRight="43dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.803"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="338dp"
        android:layout_height="178dp"
        android:layout_marginBottom="181dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/cardView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bordeslayout">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Nombre:"
                    android:gravity="center"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/backgroundColor"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Apellido:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/backgroundColor"/>

                <TextView
                    android:id="@+id/id_precio_list"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:text="DirecciÃ³n:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/backgroundColor"/>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Telefono:"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/backgroundColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/bordeslayout">

                <EditText
                    android:id="@+id/id_editar_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:singleLine="true"
                 />

                <EditText
                    android:id="@+id/id_editar_Apellido"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:singleLine="true"
                    />

                <EditText
                    android:id="@+id/id_editar_direccion"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:singleLine="true"
                   />

                <EditText
                    android:id="@+id/id_editar_telefono"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="7dp"
                    android:inputType="number"
                    android:singleLine="true"
                    />
            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/id_seleccion"
        android:layout_width="254dp"
        android:layout_height="50dp"
        android:text="Seleccionar Foto "
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.121"
        android:background="@color/colorPrimary"
        android:textColor="@color/cardview_light_background"/>

</android.support.constraint.ConstraintLayout>
