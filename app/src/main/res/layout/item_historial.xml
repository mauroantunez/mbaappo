<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="horizontal"
    android:background="#E8EAF6">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/historial_foto"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/servicio_historial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/historial_foto"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@+id/historial_foto"
        android:layout_toRightOf="@+id/historial_foto"
        android:text="TextView"
        android:textColor="@color/colorPrimaryText"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/usuario_servicio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/servicio_historial"
        android:layout_alignStart="@+id/servicio_historial"
        android:layout_below="@+id/servicio_historial"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="17dp"
        android:text="TextView"
        android:textColor="@color/colorSecondaryText" />

    <TextView
        android:id="@+id/servicio_fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/historial_foto"
        android:layout_alignLeft="@+id/usuario_servicio"
        android:layout_alignStart="@+id/usuario_servicio"
        android:layout_marginBottom="5dp"
        android:text="TextView" />


</RelativeLayout>
